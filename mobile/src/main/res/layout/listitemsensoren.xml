<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="15dip"
                android:paddingStart="15dip"
                android:paddingRight="0dip"
                android:paddingEnd="0dip"
                android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/sensortextview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/sensortextview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/sensortextview1"
        android:textColor="@color/grey"
        android:textSize="14sp"/>

    <CheckBox
        android:id="@+id/sensorcheckBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/sensorselftest"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/sensorfreqbutton"
        android:layout_toStartOf="@+id/sensorfreqbutton"
        android:textColor="@color/white"
        android:text="@string/sensor_selftest_button"/>

    <Button
        android:id="@+id/sensorfreqbutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/sensorcheckBox1"
        android:layout_toStartOf="@+id/sensorcheckBox1"
        android:textColor="@color/white"
        android:text="@string/sensor_frequency_button"/>

</RelativeLayout>